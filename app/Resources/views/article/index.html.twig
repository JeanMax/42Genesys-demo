{% extends 'base.html.twig' %}

{% block body %}
    <h1 class=my-4>Articles list</h1>

    {% for article in articles %}
        <div class="card mb-4">
            <img class="card-img-top" width="750" height="300"
                 {% if  article.pictures[0] is defined %}
                 src="{{ asset(article.pictures[0].path) }}"
                 {% else %}
                 src="http://placehold.it/750x300"
                 {% endif %}
                 alt="Card image cap">
            <div class="card-body">
                <h2 class="card-title">Post #{{ article.id }}</h2>
                <p class="card-text">{{ article.content }}</p>
                <td><a class="btn btn-primary" href="{{ path('article_show', { 'id': article.id }) }}">Read More &rarr;</a></td>
            </div>
            <div class="card-footer text-muted">
                Posted by {{ article.author }}
            </div>
        </div>
    {% endfor %}

    <!-- Pagination -->
    <ul class="pagination justify-content-center mb-4">
        <li class="page-item">
            <a class="page-link" href="#">&larr; Older</a>
        </li>
        <li class="page-item disabled">
            <a class="page-link" href="#">Newer &rarr;</a>
        </li>
    </ul>

    <div class="mb-4">
        <a class="btn btn-primary" href="{{ path('article_new') }}">Create a new article</a>
    </div>
{% endblock %}
